[Unit]
Description=HawkFish Controller
After=network.target

[Service]
Type=simple
EnvironmentFile=-/etc/hawkfish/hawkfish.env
ExecStart=/usr/bin/python3 -m hawkfish_controller --host 0.0.0.0 --port 8080
Restart=on-failure
User=hawkfish
Group=hawkfish
WorkingDirectory=/var/lib/hawkfish

[Install]
WantedBy=multi-user.target


